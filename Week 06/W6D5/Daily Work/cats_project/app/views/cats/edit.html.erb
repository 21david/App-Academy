<form action="<%=edit_cat_url(@cat)%>" method="POST">
    <input type="hidden" name="_method" value="PATCH">
    <label>Name:</label>
    <input type="text" name="@cat.name" value="<%= @cat.name %>">
    <br>
    <br>
        
        <%# if @cat.sex == 'M' %>
        <input type="radio" name="sex" value="M">
        <label for="M">M</label>
        <input type="radio" name="sex" value="F" <%= @cat.sex == 'F' ? checked : '' %>>
        <label for="F">F</label>
    
    <br>

    <br>
    <label for="color">Choose A Color</label>
    <%= select_tag(:color, options_for_select(COLORS)) %> 
    <br>

    <label>Enter a Birth
        <input type="date" max="<%= DateTime.now.to_s[0..9] %>">
    </label>

    <br>

    <label>Description
        <textarea cols="20" rows="10">   </textarea> 

    </label>
        
    
</form>